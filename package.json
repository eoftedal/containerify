{
	"name": "containerify",
	"version": "3.0.0",
	"description": "Build node.js docker images without docker",
	"main": "./lib/cli.js",
	"scripts": {
		"prebuild": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
		"build": "tsc && chmod ugo+x lib/cli.js",
		"lint": "eslint . --ext .ts --fix --ignore-path .gitignore",
		"typecheck": "tsc --noEmit",
		"watch": "tsc --watch",
		"check": "npm run lint && npm run typecheck",
		"dev": "tsc --watch",
		"integrationTest": "cd tests/integration/ && ./test.sh",
		"registryTest": "cd tests/localtest/ && ./test.sh"
	},
	"bin": {
		"containerify": "./lib/cli.js"
	},
	"author": "Erlend Oftedal <erlend@oftedal.no>",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/eoftedal/containerify.git"
	},
	"files": [
		"lib/"
	],
	"keywords": [
		"docker",
		"container",
		"image"
	],
	"dependencies": {
		"commander": "^11.0.0",
		"fs-extra": "^11.1.0",
		"tar": "^6.1.13"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.1",
		"@types/minizlib": "^2.1.4",
		"@types/node": "^18.11.19",
		"@types/tar": "^6.1.3",
		"@typescript-eslint/eslint-plugin": "^5.51.0",
		"@typescript-eslint/parser": "^5.51.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"prettier": "^2.8.3",
		"typescript": "^5.1.6"
	}
}
